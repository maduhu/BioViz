<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/text_blue_grey_darker"
            android:text="@string/bioviz_moto"
            />
        <TextView
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/settings_header"
            />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tweaks_available"
                    android:textColor="@color/text_blue_grey_darker"
                    android:layout_marginBottom="10dp"
                    />

                <Switch
                    android:id="@+id/conf_sw_pictures"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_picture"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:text="@string/require_images"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/conf_sw_language"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_language"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="@string/require_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Switch
                    android:shadowColor="@color/tab_red"
                    android:textColorHighlight="@color/tab_red"
                    android:id="@+id/conf_sw_data"
                    android:drawableStart="@drawable/ic_data"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:text="Use mobile data. Warning: when loading images, the application can use large amounts of traffic. Please bear in mind your monthly plan when using this option."
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/conf_bt_save"
                    android:enabled="false"
                    android:layout_marginTop="10dp"
                    style="@android:style/Widget.Material.Button.Borderless.Colored"
                    android:textColor="@color/tab_red"
                    android:text="@string/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="@string/my_informers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/card_view_gbif"
                        android:drawableTop="@drawable/ic_gbif_logo"
                        android:contentDescription="@string/app_name"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:clickable="true"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:text="@string/gbif"/>

                    <TextView
                        android:id="@+id/card_view_iNat"
                        android:drawableTop="@drawable/ic_inat_logo"
                        android:contentDescription="@string/app_name"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:clickable="true"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:text="@string/inat" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="@string/about_this_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="start"
                    android:clickable="true"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:autoLink="web"
                    android:text="@string/about" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="@string/libraries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="start"
                    android:clickable="true"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:autoLink="web"
                    android:text="@string/glide" />

                <TextView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="start"
                    android:clickable="true"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:autoLink="web"
                    android:text="@string/gson" />

                <TextView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="start"
                    android:clickable="true"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:autoLink="web"
                    android:text="@string/volley" />

                <TextView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="start"
                    android:clickable="true"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:autoLink="web"
                    android:text="@string/pallette" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>